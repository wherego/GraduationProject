<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/margin_12"
                                    android:background="@color/white"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/itg_rl_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_12"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_12"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_12">

            <ImageView
                android:id="@+id/its_themePic_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/its_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/bottom_border"
                android:paddingBottom="8dp"
                android:text="桂林山水真是甲天下，我不后悔我曾经来过这里..."
                android:textSize="@dimen/font_size_14"
                android:singleLine="true"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/its_startDateLabel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="创建日期："/>

                <TextView
                    android:id="@+id/its_createDate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/its_startDateLabel_tv"
                    android:text="2017-3-1"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_grey_radius"
            android:padding="2dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/fasong_dingwei"/>

            <TextView
                android:id="@+id/its_theme_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLength="15"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="广西 桂林山水"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>