<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border">

        <RelativeLayout
            android:id="@+id/rl_member"
            android:layout_width="wrap_content"
            android:layout_height="67dp">

            <ImageView
                android:id="@+id/item_member_iv"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:layout_centerVertical="true"
                android:background="@drawable/avatar_default"/>

            <ImageView
                android:id="@+id/item_expand_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/login_zhankai"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/item_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_toRightOf="@+id/item_member_iv"
                android:layout_toLeftOf="@+id/item_member_tv"
                android:text="fadsjfa"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/font_size_16"/>

            <TextView
                android:id="@+id/item_member_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_12"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="暂未处理"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_size_14"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>